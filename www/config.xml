<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.psellos.istc.recaf"
        version   = "1.0.0"
        xmlns:cdv = "http://cordova.apache.org/ns/1.0">
    <name>Recaf</name>
    <description>
        Food journaling based on photos
    </description>
    <author email="tractdb@tractdb.org" href="http://tractdb.org/">
        TractDB Team
    </author>

    <preference name="phonegap-version" value="3.6.3" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />

    <gap:plugin name="org.apache.cordova.camera" version="0.3.2" />
    <gap:plugin name="com.ionic.keyboard" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.device" />
    <!--  Try this later
        <gap:plugin name="com.couchbase.lite.phonegap" />
    -->
    <gap:platform name="ios" />

    <!-- Don't store local date in an iCloud backup. Turn this to "cloud" to enable storage 
         to be sent to iCloud. Note: enabling this could result in Apple rejecting your app.
    -->
    <preference name="BackupWebStorage" value="none" />

    <feature name="StatusBar">
      <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
</widget>
